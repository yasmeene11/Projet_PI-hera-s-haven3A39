<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="400" prefHeight="200" stylesheets="@../../styling/CustomAlert.css" fx:controller="controllers.CustomAlertController">

    <!-- Custom Alert Dialog Content -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="Confirm Account Deletion" styleClass="bold-label"/>
        <Label text="Are you sure you want to delete your account?"/>

        <!-- Password Input -->
        <PasswordField fx:id="passwordField" styleClass="text-field-custom" promptText="Please enter your password"/>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="10">
            <Button text="Cancel" styleClass="custom-button" onAction="#cancelAction"/>
            <Button text="Delete" styleClass="custom-button2" onAction="#deleteAction"/>
        </HBox>
    </VBox>

</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" stylesheets="@../../styling/CustomAlert.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CustomAlertController">

    <!-- Label -->
    <Label layoutX="44.0" layoutY="20.0" prefHeight="47.0" prefWidth="313.0" styleClass="bold-label" text="Are you sure you want to delete your account?" />

    <!-- Password Input -->
    <PasswordField fx:id="passwordField" layoutX="67.0" layoutY="73.0" prefHeight="47.0" prefWidth="267.0" promptText="PLease enter your password here" styleClass="text-field-custom" />

    <!-- Buttons -->
    <HBox alignment="CENTER" layoutX="102.0" layoutY="134.0" spacing="10">
        <Button onAction="#deleteAction" styleClass="custom-button2" text="Delete" />
        <Button onAction="#cancelAction" styleClass="custom-button" text="Cancel" />
    </HBox>

</AnchorPane>

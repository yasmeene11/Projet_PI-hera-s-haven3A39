<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Back.Appointment.UpdateAppointmentB">
    <Label alignment="CENTER" prefHeight="37.0" text="Update Appointment" styleClass="custom-text" stylesheets="@../../styling/fullpackstyling.css">
        <font>
            <Font name="Segoe UI" size="18.0" />
        </font>
    </Label>

    <GridPane>
        <Label text="Appointment Date" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-text-fill: #38B6FF; -fx-font-family: 'Segoe UI'; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 20 0 0;" />
        <DatePicker fx:id="datepickerappointmentdate" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Vet" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-text-fill: #38B6FF; -fx-font-family: 'Segoe UI'; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 20 0 0;" />
        <ComboBox fx:id="combovet" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Pet Name" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-text-fill: #38B6FF; -fx-font-family: 'Segoe UI'; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 20 0 0;" />
        <ComboBox fx:id="combopet" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Appointment Time" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-text-fill: #38B6FF; -fx-font-family: 'Segoe UI'; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 20 0 0;" />
        <ComboBox fx:id="AptimeId" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200.0" />
    </GridPane>

    <Label text="Appointment Status" style="-fx-text-fill: #38B6FF; -fx-font-family: 'Segoe UI'; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 20 0 0 0;" />
    <ComboBox fx:id="comboappointmentstatus"/>


    <Button onAction="#updateAppointment" text="Update" />
</VBox>
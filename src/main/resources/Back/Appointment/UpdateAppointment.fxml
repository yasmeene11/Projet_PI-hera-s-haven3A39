<VBox spacing="20" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Back.Appointment.UpdateAppointmentB" style="-fx-background-color: #fff; -fx-border-radius: 30; -fx-border-color: #38B6FF;">
    <ImageView fitHeight="78.0" fitWidth="104.0">
        <image>
            <Image url="@../../images/form.png" />
        </image>
    </ImageView>

    <Label alignment="CENTER" prefHeight="37.0" styleClass="custom-text" text="Update Appointment" style="-fx-text-fill: #38B6FF; -fx-font-family: 'Segoe UI'; -fx-font-size: 18.0; -fx-font-weight: bold;">
        <font>
            <Font name="Segoe UI" size="18.0" />
        </font>
    </Label>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="Appointment Date" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-text-fill: #38B6FF; -fx-font-family: 'Segoe UI'; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 20 0 0;" />
        <DatePicker fx:id="datepickerappointmentdate" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Appointment Time" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-text-fill: #38B6FF; -fx-font-family: 'Segoe UI'; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 20 0 0;" />
        <ComboBox fx:id="AptimeId" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200.0" />

        <Label text="Vet" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-text-fill: #38B6FF; -fx-font-family: 'Segoe UI'; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 20 0 0;" />
        <ComboBox fx:id="combovet" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Pet Name" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-text-fill: #38B6FF; -fx-font-family: 'Segoe UI'; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 20 0 0;" />
        <ComboBox fx:id="combopet" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Appointment Status" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-text-fill: #38B6FF; -fx-font-family: 'Segoe UI'; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 20 0 0;" />
        <ComboBox fx:id="comboappointmentstatus" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Button onAction="#updateAppointment" text="Update" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" styleClass="custom-button2" stylesheets="@../../styling/fullpackstyling.css" />
    </GridPane>
</VBox>



<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="600.0" spacing="10" styleClass="back" stylesheets="@../../styling/UpdateUserStyling.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Back.Animal.UpdateAdoptionB">

    <Label alignment="CENTER" layoutX="275.0" layoutY="22.0" prefHeight="35.0" prefWidth="227.0" styleClass="custom-text" stylesheets="@../../styling/fullpackstyling.css" text="Adoption Form">
        <font>
            <Font name="Segoe UI" size="18.0" />
        </font>
    </Label>

    <Label styleClass="bold-label" text="Adoption Date:" />
    <DatePicker fx:id="adoptiondate" />

    <Label styleClass="bold-label" text="Animal Status:" />
    <ComboBox fx:id="cmbadoptionstatus" styleClass="comboStatus">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Cancelled" />
                <String fx:value="Pending" />
                <String fx:value="Adopted" />

            </FXCollections>
        </items>
    </ComboBox>

    <Label styleClass="bold-label" text="Adoption Fee:" />
    <TextField fx:id="txtAdoptionFee" prefWidth="565.0" styleClass="text-field-custom" />



    <Label styleClass="bold-label" text="Animal Name:" />
    <ComboBox fx:id="cmbAnimalName" styleClass="comboStatus" />

    <Label styleClass="bold-label" text="User Name:" />
    <ComboBox fx:id="cmbUserName" styleClass="comboStatus" />



    <Button onAction="#updateAdoption" styleClass="custom-button" text="Update" />
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="410.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Back.Animal.UpdateAdoptionB">


    <Label text="Adoption Date:" />
    <DatePicker fx:id="adoptiondate" />

    <Label text="Animal Status:" />
    <ComboBox fx:id="cmbadoptionstatus">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Cancelled" />
                <String fx:value="Pending" />
                <String fx:value="Adopted" />

            </FXCollections>
        </items>
    </ComboBox>

    <Label text="Adoption Fee:" />
    <TextField fx:id="txtAdoptionFee" />



    <Label text="Animal Name:" />
    <ComboBox fx:id="cmbAnimalName" />

    <Label text="User Name:" />
    <ComboBox fx:id="cmbUserName" />



    <Button onAction="#updateAdoption" text="Update" />
</VBox>

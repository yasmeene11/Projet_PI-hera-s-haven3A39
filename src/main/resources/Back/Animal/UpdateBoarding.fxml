<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="600.0" spacing="10" styleClass="back" stylesheets="@../../styling/UpdateUserStyling.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Back.Animal.UpdateBoardingB">

    <Label alignment="CENTER" layoutX="275.0" layoutY="22.0" prefHeight="37.0" prefWidth="302.0" styleClass="custom-text" stylesheets="@../../styling/fullpackstyling.css" text="Pet Boarding Form">
        <font>
            <Font name="Segoe UI" size="18.0" />
        </font>
    </Label>
    <Label styleClass="bold-label" text="Start Date:" />
    <DatePicker fx:id="startdate" />

    <Label styleClass="bold-label" text="End Date:" />
    <DatePicker fx:id="enddate" />

    <Label styleClass="bold-label" text="Pet Boarding Status:" />
    <ComboBox fx:id="cmbboardingstatus" styleClass="comboStatus">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Cancelled" />
                <String fx:value="Pending" />
                <String fx:value="Completed" />

            </FXCollections>
        </items>
    </ComboBox>

    <Label styleClass="bold-label" text="Pet Boarding Fee:" />
    <TextField fx:id="txtboardingFee" styleClass="text-field-custom" />



    <Label styleClass="bold-label" text="Animal Name:" />
    <ComboBox fx:id="cmbAnimalName" styleClass="comboStatus" />

    <Label styleClass="bold-label" text="User Name:" />
    <ComboBox fx:id="cmbUserName" styleClass="comboStatus" />



    <Button onAction="#updateBoarding" styleClass="custom-button" text="Update" />
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="410.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Back.User.UpdateUserB">

    <Label text="Name:" />
    <TextField fx:id="txtName" />

    <Label text="Surname:" />
    <TextField fx:id="txtSurname" />

    <Label text="Gender:" />
    <ComboBox fx:id="comboGender">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Male" />
                <String fx:value="Female" />
            </FXCollections>
        </items>
    </ComboBox>

    <Label text="Phone:" />
    <TextField fx:id="txtPhone" />

    <Label text="Address:" />
    <TextField fx:id="txtAddress" />

    <Label text="Email:" />
    <TextField fx:id="txtEmail" />

    <Label text="Role:" />
    <TextField fx:id="txtRole" />
   <Label text="User Image" />
   <TextField fx:id="txtImage" />
   <Button mnemonicParsing="false" onMousePressed="#handleSelectImage" text="Select image" />

    <Label text="Status:" />
    <ComboBox fx:id="comboStatus">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Active" />
                <String fx:value="Pending" />
                <String fx:value="Blocked" />
            </FXCollections>
        </items>
    </ComboBox>

    <Button onAction="#updateUser" text="Update" />
</VBox>
